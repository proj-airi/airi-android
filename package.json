{
  "name": "airi-android",
  "version": "0.3.1",
  "description": "A MCP server to allow LLM to use Android Device",
  "type": "module",
  "main": "src/main.ts",
  "scripts": {
    "dev": "bun run src/main.ts",
    "build": "bun build src/main.ts --compile --outfile dist/airi-android",
    "start": "bun run src/main.ts",
    "lint": "bun run eslint src",
    "lint:fix": "bun run eslint src --fix",
    "typecheck": "bun run tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "android",
    "adb"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@devicefarmer/adbkit": "^3.3.8",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@types/bluebird": "^3.5.42",
    "bluebird": "^3.7.2",
    "hono": "^4.11.4",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.0.0",
    "@types/bun": "^1.3.5",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3"
  }
}
